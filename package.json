{
    "name": "risk-management",
    "version": "3.0.0",
    "description": "Hello world of sap",
    "dependencies": {
        "@sap-cloud-sdk/http-client": "3.16.0",
        "@sap-cloud-sdk/resilience": "3.12.0",
        "@sap/cds": "7.9.2",
        "@sap/cds-dk": "7.9.2",
        "cross-env": "^7.0.3",
        "express": "^4"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1.7.1",
        "@sap/ux-specification": "^1.120.13"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-risk-management": "cds watch --open risk-management/webapp/index.html?sap-ui-xx-viewCache=false"
    },
    "cds": {
        "i18n": {
            "default_language": "de"
        },
        "requires": {
            "API_BUSINESS_PARTNER": {
                "kind": "odata-v2",
                "model": "srv/external/API_BUSINESS_PARTNER",
                "[hybrid]": {
                    "credentials": {
                        "path": "/sap/opu/odata/sap/API_BUSINESS_PARTNER/",
                        "destination": "S4HANA",
                        "headers": {
                            "apikey": "DGk9EHxxsj0KkRSfq9LE4Klz7h8vnldu"
                        }
                    }
                }
            },
            "db": {
                "kind": "sqlite",
                "credentials": {
                    "url": "db.sqlite"
                },
                "schema_evolution": "auto"
            }
        }
    },
    "sapux": [
        "app/risk-management"
    ]
}
